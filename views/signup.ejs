<%- layout("./boilerplate") %>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <h1>
                SignUp page</h1>
            <div class="mt-3 mb-3">
                <label class="form-label" for="username">Username</label>
                <input type="text" name="username" class="form-control" id="username" placeholder="enter your username " required>
                <div class="invalid-feedback">please enter valid username</div>
            </div>
            <div class="mt-3 mb-3">
                <label class="form-label" for="email">Email</label>
                <input type="text" class="form-control" name="email" placeholder="enter you email" id="email" required >
                <div class="invalid-feedback">please enter valid email</div>
            </div>
            <div class="mb-3 mt-3">
                <label class="form-label" for="pass">Password</label>
                <input type="password" class="form-control" name="password" placeholder="enter your password" id="pass" required>
                <div class="invalid-feedback">please enter strong password</div>
            </div>
            <button class="btn btn-outline-success mt-3 mb-3 ">signup</button>
        </form>
    </div>
    
</div>