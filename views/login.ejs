<%- layout("./boilerplate") %>
<div class="row">
    <div class="col-6 offset-3">
        <h1>Login </h1>
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3 mt-3 ">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" id="username" name="username" placeholder="enter username" type="text" required>
                <div class="invalid-feedback">enter a valid username</div>
            </div>
            <div class="mb-3 mt-3 ">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="enter password" required>
                <div class="invalid-feedback">enter a valid Password</div>
            </div>
            <div class="mb-3 mt-3 ">
            <button  class="btn btn-outline-dark">login</button>
            </div>
        </form>
    </div>
</div>